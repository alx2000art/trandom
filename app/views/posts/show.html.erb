<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>


<h2>Comments2</h2>
<%= render @post.comments %>

<h2>Comments</h2>


<% @post.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<p>=============================</p>

<%= form_for([@post, @post.comments.build]) do |f| %>
 
<%= f.label :commenter %>
 <%= f.text_field :commenter %> 
<p>
<%= f.label :body %>
<%= f.text_area :body %>
</p> 
<p><%= f.submit %> 
</p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>






